extends layout

block content
    h1.bct-header Login
    form#login-form.bct-form
        input(type='text' placeholder='User Name' required)#user-id.bct-form__input
        input(type='password' placeholder='Passowrd' required)#password.bct-form__input
        button(type='submit').bct-form__btn.bct-form__btn_read Login
    h3
        a(href="/authenticate") Login using private key
    include ./overlay

